<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_names_input"
        android:textSize="22sp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/p1_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/player_1_name_input"
        android:textSize="20sp"
        android:maxLength="20"
        android:autofillHints="Player 1"
        android:inputType="text" />

    <EditText
        android:id="@+id/p2_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/player_2_name_input"
        android:textSize="20sp"
        android:maxLength="20"
        android:autofillHints="Player 2"
        android:inputType="text" />
